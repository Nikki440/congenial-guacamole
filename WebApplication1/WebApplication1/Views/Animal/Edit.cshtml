@model WebApplication1.Models.Animal

<h2>Edit Animal</h2>

<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="Id" />

	<div>
		<label>Name:</label>
		<input type="text" asp-for="Name" required />
	</div>
    
	<div>
		<label>Species:</label>
		<input type="text" asp-for="Species" required />
	</div>

	<div>
		<label>Category:</label>
		<select asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select>
	</div>

	<button type="submit">Save Changes</button>
</form>

