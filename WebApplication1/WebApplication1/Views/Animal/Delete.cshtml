@model WebApplication1.Models.Animal

<h2>Delete Animal</h2>

<p>Are you sure you want to delete this animal?</p>

<ul>
	<li><strong>Name:</strong> @Model.Name</li>
	<li><strong>Species:</strong> @Model.Species</li>
	<li><strong>Category:</strong> @Model.Category?.Name</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit">Delete</button>
</form>

