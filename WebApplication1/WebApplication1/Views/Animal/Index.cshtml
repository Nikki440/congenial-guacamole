@model List<WebApplication1.Models.Animal>

<h2>Animal List</h2>

<!-- Search Form -->
<form asp-controller="Animal" asp-action="Index" method="get">
    <input type="text" name="searchString" placeholder="Search by name, species, category..." value="@Context.Request.Query["searchString"]" />
    <button type="submit">Search</button>
</form>

<button class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Animal" asp-action="Create">Create</a>
</button>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Species</th>
        <th>Category</th>
        <th>Enclosure</th>
        <th>Size</th>
        <th>Dietary Class</th>
        <th>Activity Pattern</th>
        <th>Prey</th>
        <th>Space Requirement</th>
        <th>Security Requirement</th>
        <th>Actions</th>
    </tr>
    @foreach (var animal in Model)
    {
        <tr>
            <td>@animal.Name</td>
            <td>@animal.Species</td>
            <td>@animal.Category?.Name</td>
            <td>@animal.Enclosure?.Name</td>
            <td>@animal.Size</td>
            <td>@animal.DietaryClass</td>
            <td>@animal.ActivityPattern</td>
            <td>@(animal.Prey ? "Yes" : "No")</td>
            <td>@animal.SpaceRequirement</td>
            <td>@animal.SecurityRequirement</td>
            <td>
                <form asp-area="" asp-controller="Animal" asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@animal.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a class="btn btn-primary" asp-area="" asp-controller="Animal" asp-action="Edit" asp-route-id="@animal.Id">Edit</a>
            </td>
        </tr>
    }
</table>
